<div class="content">
    <div class="content__header">
        <h3 class="content__title">Edit Ingredient: <%= ingredient.name %>
        </h3>
    </div>

    <% if (typeof errorMessage !=='undefined' ) { %>
        <div class="alert">
            <%= errorMessage %>
        </div>
        <% } %>

            <div class="content__body">
                <form action="/edit-ingredient/<%= ingredient.id %>" method="POST" class="form"
                    enctype="multipart/form-data">
                    <div class="form__group">
                        <label for="name" class="form__label">Edit Ingredient Name</label>
                        <input type="text" id="name" name="name" class="form__input"
                            value="<%= (formData && formData.name) || ingredient.name %>" required>
                    </div>

                    <div class="form__group">
                        <label for="type" class="form__label">Edit Ingredient Type
                        </label>
                        <input type="text" id="type" name="type" class="form__input"
                            value="<%= formData && formData.type || ingredient.type %>">
                    </div>

                    <div class="form__group">
                        <label for="price" class="form__label">Edit Ingredient Price
                        </label>
                        <input type="number" id="price" name="price" class="form__input" step="0.01" min="0"
                            value="<%= formData && formData.price || ingredient.price %>">
                    </div>

                    <div class="form__group">
                        <label for="image" class="form__label">Swap Ingredient
                            Image</label>
                        <input type="file" id="image" name="image" class="form__input" accept="image/*">
                    </div>

                    <% if (formData || ingredient.image_url) { %>
                        <label class="form__label">Current image: <%= formData.image_url || ingredient.image_url %>
                                </label>
                        <img src="/<%= formData.image_url || ingredient.image_url %>" alt="Current image"
                            class="form__image-preview">
                        <% } %>

                            <div class="form__actions">
                                <button type="submit" class="btn btn--primary">Submit
                                    Edit</button>
                                <a href="/ingredients" class="btn btn--secondary">Cancel</a>
                            </div>
                </form>
            </div>
</div>