<div class="content">
    <div class="content__header">
        <h3 class="content__title">Add New Ingredient</h3>
    </div>

    <% if (typeof errorMessage !=='undefined' ) { %>
        <div class="alert">
            <%= errorMessage %>
        </div>
        <% } %>

            <div class="content__body">
                <form action="/add-ingredient" method="POST" class="form" enctype="multipart/form-data">
                    <div class="form__group">
                        <label for="name" class="form__label">Ingredient Name</label>
                        <input type="text" id="name" name="name" class="form__input" <% if (typeof formData
                            !=="undefined" ) { %>value="<%= formData.name || '' %>"<%}%>
                                required>
                    </div>

                    <div class="form__group">
                        <label for="size" class="form__label">Ingredient Type</label>
                        <input type="text" id="type" name="type" class="form__input" <% if (typeof formData
                            !=="undefined" ) { %>value="<%= formData.type || '' %>"<%}%>>
                    </div>

                    <div class="form__group">
                        <label for="price" class="form__label">Price</label>
                        <input type="number" id="price" name="price" class="form__input" step="0.01" min="0" <% if
                            (typeof formData !=="undefined" ) { %>value="<%= formData.price || '' %>"<%}%> required>
                    </div>

                    <div class="form__group">
                        <label for="image" class="form__label">Ingredient Image</label>
                        <input type="file" id="image" name="image" class="form__input" accept="image/*">
                    </div>

                    <div class="form__actions">
                        <button type="submit" class="btn btn--primary">Add Ingredient</button>
                        <a href="/ingredients" class="btn btn--secondary">Cancel</a>
                    </div>
                </form>
            </div>
</div>