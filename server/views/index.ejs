<h1>
    <%= title %>
</h1>

<% if( products.length===0 ) { %>
    <p>There are currently no products available</p>
    <% } else { %>
        <% products.forEach((product)=> { %>
            <h2>
                <%= product.name %>
            </h2>
            <p>
                <%= product.description %>
            </p>
            <% }) %>
                <% } %>